<BIX5 backgroundColor="#FFFFFF"  borderStyle="none">
	<Options>
		<Caption text="Annual Report"/>
		<SubCaption text="2013"/>
		<Legend defaultMouseOverAction="true"/>
	</Options>
	<NumberFormatter id="numFmt" useThousandsSeparator="true"/>
	<Combination2DChart showDataTips="true">
		<horizontalAxis>
		   <CategoryAxis categoryField="Month" padding="0.7"/>
		</horizontalAxis>
		<verticalAxis>
			<LinearAxis id="vAxis1" interval="400" formatter="{numFmt}" maximum="3200"/>
		</verticalAxis>
		<series>
			<Area2DSeries yField="Profit" form="curve" displayName="Profit">
				<areaStroke>
					<Stroke color="#5587a2" weight="3"/>
				</areaStroke>
				<areaFill>
					<SolidColor color="#5587a2" alpha="0.15"/>
				</areaFill>
			</Area2DSeries>
			<Column2DSet type="clustered">
				<series>
					<Column2DSeries yField="Cost" displayName="Cost">
						<fill>
							<SolidColor color="#40b2e6"/>
						</fill>
						<showDataEffect>
							<SeriesInterpolate/> 
						</showDataEffect>
					</Column2DSeries>
					<Column2DSeries yField="Revenue" displayName="Revenue">
						<fill>
							<SolidColor color="#4453a8"/>
						</fill>
						<showDataEffect>
							<SeriesInterpolate/> 
						</showDataEffect>
					</Column2DSeries>
				</series>
			</Column2DSet>
			<Line2DSeries yField="Revenue" radius="4.5" itemRenderer="CircleItemRenderer" displayName="Revenue">
				<stroke>
					<Stroke color="#f9bd03" weight="3"/>
				</stroke>
				<lineStroke>
					<Stroke color="#f9bd03" weight="3"/>
				</lineStroke>
				<verticalAxis>
					<LinearAxis id="vAxis2" interval="400" formatter="{numFmt}"/>
				</verticalAxis>
				<showDataEffect>
					<SeriesInterpolate/> 
				</showDataEffect>
			</Line2DSeries>
		</series>
		<verticalAxisRenderers>
			<Axis2DRenderer axis="{vAxis1}" showLine="false"/>
			<Axis2DRenderer axis="{vAxis2}" showLine="false"/>
		</verticalAxisRenderers>
	</Combination2DChart>
</BIX5>