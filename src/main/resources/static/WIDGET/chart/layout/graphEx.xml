<BIX5 backgroundColor="#FFFFFF" borderStyle="none">
    <Options>
        <Caption text="Global Temperature"/>
        <Legend />
    </Options>
    <NumberFormatter id="nft" precision="2"/>
    <Line2DChart showDataTips="true" dataTipFormatter="{nft}">
        <horizontalAxis>
            <CategoryAxis id="hAxis" categoryField="Year"/>
        </horizontalAxis>
        <verticalAxis>
            <LinearAxis id="vAxis" title="Temperature Anomaly (â„ƒ)"/>
        </verticalAxis>
        <series>
            <Line2DSeries yField="Annual" displayName="Annual Mean">
                <showDataEffect>
                    <SeriesClip duration="1000"/>
                </showDataEffect>
            </Line2DSeries>
            <Line2DSeries yField="Five" displayName="5 Year Mean">
                <showDataEffect>
                    <SeriesClip duration="1000"/>
                </showDataEffect>
            </Line2DSeries>
        </series>
    </Line2DChart>
</BIX5>